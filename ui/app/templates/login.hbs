{{page-title "Login"}}

<div class="container text-center m-4">
    <LinkTo @route="index" class="navbar-brand"><img width="100px" height="40px" src="/logo.png" /></LinkTo>
</div>
<div class="container m-4">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <label for="inputEmail" class="form-label">Email</label>
            <Input @type="email" id="inputEmail" class="form-control"
                @value={{this.email}}
                aria-describedby="email" autofocus required />
            <label for="inputPassword" class="form-label">Password</label>
            <Input @type="password" id="inputPassword" class="form-control" 
                aria-describedby="password" required
                @value={{this.password}} />
        </div>
        <div class="col"></div>
    </div>
    <div class="row m-3">
        <div class="col" style="text-align: right;">
            <button type="button" class="btn btn-primary" {{on 'click' this.Login }}>Login</button>
        </div>
        <div class="col">
            <label class="col-form-label">OR</label>
            <button type="button" class="btn btn-secondary" {{on 'click' this.Register }}>Register</button>
        </div>
    </div>
    <div>
        <div class="col"></div>
        <div class="col">
            {{#if this.error}}
            <div class="alert alert-danger" role="alert">
                <i class="bi-exclamation-triangle-fill"></i> {{this.error}}
            </div>
            {{/if}}
        </div>
        <div class="col"></div>
    </div>
</div>

