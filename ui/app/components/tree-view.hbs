<div class="treeViewRoot p-2 {{if @showDetails 'treeViewDetails'}}">
    {{#if @showDetails}}
    <label style="font-size: large;">{{@target.description}}</label>
    <br>
    <div style="font-size: small;">
        <label>{{@target.status}}% ({{@target.statusDescription}})
            <a href="#" {{on 'click' this.ShowModal}}><i class="bi-lock-fill"></i></a></label>
            {{#if @target.url}}
            <br>
            <a href={{@target.url}}>Link</a>
            {{/if}}
        <br>
        <BsModalSimple
            @open={{this.modalOpen}}
            @title="{{this.getChildId @target.id}} permissions"
            @closeTitle="Close"
            @size=""
            @closeButton={{true}}
            @fade={{true}}
            @backdrop={{true}}
            @backdropClose={{true}}
            @onHide={{this.close}}
            @renderInPlace={{true}} >
            Owners: {{@target.owners}}
            <br>
            Writers: {{@target.writers}}
            <br>
            Readers: {{@target.readers}}
        </BsModalSimple>
    </div>
    <div style="margin-top: 5px;"></div>
    {{/if}}
    <TreeItem @target={{ @target }} />
    {{#if @target.parent}}
    &nbsp;<TreeItem @target={{ @target.parent }} />
    {{/if}}
</div>
{{#if @target.children}}
<div class="treeViewChildren">
    {{#each @target.children as |child|}}
    <TreeItem @target={{ child }} @parent={{@target.id}} />
    {{/each}}
</div>
{{/if}}