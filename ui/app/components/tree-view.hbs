<div class="treeViewRoot p-2 {{if @showDetails 'treeViewDetails'}}">
    {{#if @showDetails}}
    <label style="font-size: large;">{{@target.description}}
        <a href="#" {{on 'click' this.ShowModal}}><i class="bi-lock-fill"></i></a>
    </label>
    <br>
    <div style="font-size: small;">
        {{#if @target.url}}
        <a href={{@target.url}}>Link</a>
        {{/if}}
        <BsModalSimple
            @open={{this.modalOpen}}
            @title="{{this.getChildId @target.id}} permissions"
            @closeTitle="Close"
            @size=""
            @closeButton={{true}}
            @fade={{true}}
            @backdrop={{true}}
            @backdropClose={{true}}
            @onHide={{this.close}}
            @renderInPlace={{true}} >
            Owners: {{@target.owners}}
            <br>
            Writers: {{@target.writers}}
            <br>
            Readers: {{@target.readers}}
        </BsModalSimple>
    </div>
    <div style="margin-top: 5px;"></div>
    {{/if}}
    <TreeItem @target={{ @target }} />
    {{#if @target.description}}
    {{#unless @showDetails}}
    <br>
    <label style="margin-left: 5px; font-size: small;">{{@target.description}}</label>
    {{/unless}}
    {{/if}}
    {{#if @target.parent}}
    &nbsp;<TreeItem @target={{ @target.parent }} />
    {{/if}}
    {{#if @target.children}}
    <label style="font-size: small;">({{@target.children.length}} child targets, {{this.childrenVisibleCount}} visible)</label>
    {{/if}}
</div>
{{#if @target.children}}
<div class="treeViewChildren">
    {{#each this.filteredChildren as |child|}}
    <TreeItem @target={{ child }} @parent={{@target.id}} />
    {{/each}}
</div>
{{/if}}